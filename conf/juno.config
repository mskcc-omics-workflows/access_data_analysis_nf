    outdir                       = "./results/"

    // Regex Patterns
    clinical_access_sample_regex_pattern       = ".*-XS.*-standard.*"
    clinical_impact_sample_regex_pattern       = ".*(-IM|-IH).*"

    fasta_ref = "/juno/work/access/production/resources/reference/current/Homo_sapiens_assembly19.fasta"
 
    base_dirs = [
